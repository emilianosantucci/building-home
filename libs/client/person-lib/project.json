{
  "name": "client-person-lib",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/client/person-lib/src",
  "prefix": "bh",
  "tags": ["scope:client", "type:lib"],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/client/person-lib/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/client/person-lib/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/client/person-lib/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/client/person-lib/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/client/person-lib/**/*.ts",
          "libs/client/person-lib/**/*.html"
        ]
      }
    }
  }
}
